# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
# Use Azure Database for PostgreSQL connection string
DATABASE_URL=postgresql://username:password@your-server.postgres.database.azure.com:5432/purviewx_db?sslmode=require

# Microsoft Entra ID Configuration
# These values come from your App Registration
ENTRA_CLIENT_ID=your-client-id-here
ENTRA_TENANT_ID=your-tenant-id-here
ENTRA_CLIENT_SECRET=your-client-secret-here

# Cloud Environment
# Options: Commercial, GCC, GCC High, DOD
PURVIEWX_CLOUD=Commercial

# AI Services
GEMINI_API_KEY=your-gemini-api-key-here

# Azure Storage (for evidence storage)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-key;EndpointSuffix=core.windows.net

# Security Settings
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# Database Settings (if using local PostgreSQL)
POSTGRES_USER=purviewx_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=purviewx_db
