# GCC (Government Community Cloud) Environment Configuration
# This configuration is optimized for GCC deployments

# Application Settings
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
# Use Azure Database for PostgreSQL in GCC
DATABASE_URL=postgresql://username:password@your-server.postgres.database.usgovcloudapi.net:5432/purviewx_db?sslmode=require

# Microsoft Entra ID Configuration (GCC)
# These values come from your GCC App Registration
ENTRA_CLIENT_ID=your-gcc-client-id-here
ENTRA_TENANT_ID=your-gcc-tenant-id-here
ENTRA_CLIENT_SECRET=your-gcc-client-secret-here

# Cloud Environment
PURVIEWX_CLOUD=GCC

# AI Services
GEMINI_API_KEY=your-gemini-api-key-here

# Azure Storage (GCC)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=your-storage-key;EndpointSuffix=core.usgovcloudapi.net

# Security Settings
SESSION_SECRET=your-session-secret-here
JWT_SECRET=your-jwt-secret-here

# Database Settings
POSTGRES_USER=purviewx_user
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=purviewx_db
